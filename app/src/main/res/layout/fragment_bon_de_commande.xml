<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BonDeCommandeFragment"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations bon de commande"
                android:padding="4dp"
                android:textStyle="normal"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/textView3"
                android:background="@android:color/darker_gray"
                />
        </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        style="@style/Widget.Material3.CardView.Outlined"
        app:cardBackgroundColor="#f3f5f9"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_passager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/human_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Passager"
            style="?attr/textInputOutlinedDenseStyle"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_tel_passager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_local_phone_24"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Tel passager"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/date_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Date commande"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_date_commande"
                android:focusable="false"
                android:clickable="true"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/four_o_clock_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Heure commande"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_heure_commande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/date_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Date prise en charge"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_date_prise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/four_o_clock_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Heure prise en charge"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_heure_prise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_pec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/location_pin_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Lieu prise en charge"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/address_location_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Destination"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_tarif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/pricing_icon"
            app:endIconMode="clear_text"
            android:textColorHint="#A8A7A7"
            android:hint="Tarif"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="1dp"
            style="?attr/textInputOutlinedDenseStyle"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_save_info_bon"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="30sp"
            android:text="Generer bon de commande"
            style="?attr/materialIconButtonFilledStyle"/>


    </LinearLayout>
</ScrollView>